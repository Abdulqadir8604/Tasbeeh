<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TasbeehSplash" parent="Theme.SplashScreen.IconBackground">

        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Tasbeeh</item>

    </style>
    <style name="Theme.Tasbeeh" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">
            false
        </item>
        <item name="android:windowTranslucentNavigation">
            false
        </item>
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>
    </style>

</resources>